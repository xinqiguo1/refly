  @@index([userId, createdAt(sort: Desc)])
  @@map("auto_model_routing_results")
}

model WorkflowSchedule {
  // ========== Primary Key ==========
  pk         BigInt @id @default(autoincrement())
  scheduleId String @unique @map("schedule_id")

  // ========== Relation Fields (no foreign key constraints enforced in DB typically) ==========
  uid      String @map("uid")
  canvasId String @map("canvas_id")

  // ========== Basic Info ==========
  /// Scheduled task name
  name String @map("name")

  // ========== Scheduling Config ==========
  /// Whether the schedule is enabled
  isEnabled Boolean @default(false) @map("is_enabled")

  /// Cron expression (e.g. "0 8 * * *")
  cronExpression String @map("cron_expression")

  /// Frontend schedule config JSON
  /// { type: 'daily|weekly|monthly', time: '08:00', weekdays?: [1,2], monthDays?: [1,15] }
  scheduleConfig String @map("schedule_config")

  /// Timezone
  timezone String @default("Asia/Shanghai") @map("timezone")

  // ========== Runtime Status ==========
  /// Next run time
  nextRunAt DateTime? @map("next_run_at") @db.Timestamptz()

  /// Last run time
  lastRunAt DateTime? @map("last_run_at") @db.Timestamptz()

  // ========== Audit Fields ==========
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  // ========== Unique Constraints ==========
  /// Ensure one schedule per canvas per user (prevents concurrent creation race condition)
  @@unique([canvasId, uid])
  // ========== Indexes ==========
  @@index([uid, isEnabled, deletedAt])
  @@index([isEnabled, nextRunAt, deletedAt])
  @@index([canvasId, deletedAt])
  @@map("workflow_schedules")
}

model WorkflowScheduleRecord {
  // ========== Primary Key ==========
  pk               BigInt @id @default(autoincrement())
  scheduleRecordId String @unique @map("schedule_record_id")

  // ========== Relation Fields ==========
  /// Schedule ID
  scheduleId String @map("schedule_id")

  /// Workflow Execution ID (if started)
  workflowExecutionId String? @map("workflow_execution_id")

  /// User ID (redundant for querying)
  uid String @map("uid")

  /// Canvas ID (actual execution canvas - newly created for each execution)
  canvasId String @map("canvas_id")

  /// Source canvas ID (template/original canvas from which workflow is initialized)
  sourceCanvasId String @default("") @map("source_canvas_id")

  // ========== Execution Info ==========

  /// Workflow title at the time of execution
  workflowTitle String @map("workflow_title")

  /// Used tools list (JSON array) ["notion", "slack", "gmail"]
  usedTools String? @map("used_tools")

  /// Execution status: pending, running, success, failed, skipped
  status String @default("pending") @map("status")

  /// Credit used
  creditUsed Int @default(0) @map("credit_used")

  /// Execution priority
  priority Int @default(5) @map("priority")

  // ========== Scheduling Info ==========

  /// Planned execution time
  scheduledAt DateTime @map("scheduled_at") @db.Timestamptz()

  /// Actual triggered time
  triggeredAt DateTime @default(now()) @map("triggered_at") @db.Timestamptz()

  /// Completion time
  completedAt DateTime? @map("completed_at") @db.Timestamptz()

  // ========== Error Info ==========

  /// Failure reason
  failureReason String? @map("failure_reason")

  /// Error details (JSON)
  errorDetails String? @map("error_details")

  // ========== Snapshot Info ==========

  /// Snapshot storage key in object storage
  snapshotStorageKey String? @map("snapshot_storage_key")

  // ========== Audit Fields ==========
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz()

  // ========== Indexes ==========
  @@index([scheduleId, scheduledAt])
  @@index([uid, status, createdAt])
  @@index([status, createdAt])
  @@index([workflowExecutionId])
  @@index([priority, scheduledAt])
  @@index([sourceCanvasId])
  @@map("workflow_schedule_records")
}
